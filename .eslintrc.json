{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "max-len": "off",
        "import/no-extraneous-dependencies": "off",
        "react/no-unescaped-entities": "off",
        "import/extensions": "off",
        "no-use-before-define": "off",
    }
}
